package com.dualaccess.db;

import java.sql.Connection;
import java.sql.DriverManager;

public class DBConnection {
    public static Connection getConnection() {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver"); // Check this is loaded (ensure .jar is in Tomcat lib)
            return DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/dual_access_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC",
                "root", ""
            );
        } catch (Exception e) {
            e.printStackTrace();
            return null;
        }
    }

    public static void main(String[] args) {
        Connection conn = getConnection();
        if (conn != null) {
            System.out.println("✅ Connection Successful");
        } else {
            System.out.println("❌ Connection Failed");
        }
    }
}
